@import "variables.styl"
@import "mixins.styl"

body
  @extend .serif
  font-size 20px
  color gray-dark
  background-color #ecf0f3

p
  line-height 1.5
  margin 30px 0

p, li
  a
    text-decoration underline

h1, h2, h3, h4, h5, h6
  @extend .sans-serif
  font-weight 800

a
  color gray-dark
  &:hover, &:focus
    color brand-primary
a img
  &:hover, &:focus
    cursor zoom-in

hr.small
  max-width 100px
  margin 15px auto
  border-width 4px
  border-color white

.navbar-custom
  position absolute
  top 0
  left 0
  width 100%
  z-index 3  
  // line-height 35px
  @extend .sans-serif
  .navbar-brand
    font-weight 800
    // margin 5px 0 0px
    font-size 18px
  .nav
      li
        // margin 5px 0 10px
        a
          text-transform uppercase
          font-size 14px
          font-weight 800
          // height 40px
          letter-spacing 1px
          text-decoration none
        input
          padding-left 10px
          border-radius 15px
          border 2px
          border-style solid
          border-color gray-dark
          background white
          font-size 12px
          

@media only screen and (max-width:768px)
  .navbar-custom
    .nav
      .search-input
        display:  none

@media only screen and (min-width:768px)
  .navbar-custom
    background transparent
    border-bottom 1px solid transparent
    body
      font-size 20px
    .navbar-brand
      color #fff
      // padding 20px
      // line-height 20px
      padding 20px
      &:hover, &:focus
        color rgba(255,255,255,.8)
    .nav
      li
        // padding 20px
        margin 7px 0 8px
        height 45px
        a
          color #fff
          padding-bottom 10px
          &:hover, &:focus
            color white-faded
          &:active
            background transparent
        .bar7
          // -webkit-perspective 500px
          // perspective 500px
          input
            width 100px
            border-radius 0px
            border 1px
            border-style solid
            border-color #FFFFFF
            background transparent
            transition 0.3s
            font-size 13px
            padding-left 12px
            text-decoration none
            font-size 14px
            &:focus
              width 350px
            &::-webkit-input-placeholder
              color #FFFFFF
            &:-moz-placeholder
              color #FFFFFF
            &::-moz-placeholder
              color #FFFFFF
            &:-ms-input-placeholder
              color #FFFFFF
          button
            background transparent
            border-radius 50%
            border none
            top 5px
            right 20px
            cursor pointer
            position absolute
            &:before
              content "\f002" 
              font-family FontAwesome 
              font-size 6px
              color #F9F0DA
          .search-result-list
            padding 4px 0
            background-color #fff
            width 350px
            position absolute
            right 15px
            top 42px
            margin 0
            -webkit-transform-origin top
            transform-origin top
            -webkit-transform rotateX(0deg)
            transform rotateX(0deg)
            -webkit-transition: opacity 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.3s, -webkit-transform 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.2s
            transition opacity 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.3s, -webkit-transform 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.2s
            transition transform 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.2s, opacity 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.3s
            transition transform 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.2s, opacity 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.3s, -webkit-transform 0.6s cubic-bezier(0.68, -0.55, 0.39, 1.3) -0.2s
            li
              color  gray-dark
              list-style none
              margin 0
              height auto !important
              padding 8px 
              -webkit-transition all .2s linear
              transition all .2s linear
              cursor pointer
              &:hover
                background-color #00FFFF
              .search-keyword
                font-weight bold
                color red
                background-color #FFF68F
                overflow-wrap break-word
              a
                color  gray-dark
                font-size 12px
                margin 0
                p
                  color #696969
                  font-size 6px
                  font-family 'Lora', 'Times New Roman', serif
                  margin 0
                  text-decoration none
                  text-transform none
                  font-weight none
                  letter-spacing 0px
          .hidden
            opacity 0
            -webkit-transform rotateX(-90deg)
            transform rotateX(-90deg)
            transform rotateX(-90deg)
            pointer-events none
            -webkit-transition opacity 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09) 0.1s, -webkit-transform 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09)
            transition opacity 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09) 0.1s, -webkit-transform 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09)
            transition transform 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09), opacity 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09) 0.1s
            transition transform 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09), opacity 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09) 0.1s, -webkit-transform 0.6s cubic-bezier(0.71, -0.22, 0.33, 1.09)
            

     
@media only screen and (min-width: 1170px)
  -webkit-transition background-color 0.3s
  -moz-transition background-color 0.3s
  transition background-color 0.3s
  /* Force Hardware Acceleration in WebKit */
  -webkit-transform translate3d(0, 0, 0)
  -moz-transform translate3d(0, 0, 0)
  -ms-transform translate3d(0, 0, 0)
  -o-transform translate3d(0, 0, 0)
  transform translate3d(0, 0, 0)
  -webkit-backface-visibility hidden
  backface-visibility hidden
  &.is-fixed
    /* when the user scrolls down, we hide the header right above the viewport */
    position fixed
    top -61px
    background-color rgba(255, 255, 255, 0.9)
    border-bottom 1px solid darken(rgb(255, 255, 255, 1), 5%)
    -webkit-transition -webkit-transform 0.3s
    -moz-transition -moz-transform 0.3s
    transition transform 0.3s
    .navbar-brand
      color gray-dark
      &:hover, &:focus
        color brand-primary
    .nav
      li
        a
          color gray-dark
          &:hover, &:focus
            color brand-primary
        .bar7
          input
            border-color gray-dark
            &::-webkit-input-placeholder
              color gray-dark
            &:-moz-placeholder
              color gray-dark
            &::-moz-placeholder
              color gray-dark
            &:-ms-input-placeholder
              color gray-dark   
          button
            color gray-dark
  &.is-visible
    /* if the user changes the scrolling direction, we show the header */
    -webkit-transform translate3d(0, 100%, 0)
    -moz-transform translate3d(0, 100%, 0)
    -ms-transform translate3d(0, 100%, 0)
    -o-transform translate3d(0, 100%, 0)
    transform translate3d(0, 100%, 0)

.intro-header
  background-color gray
  background-position center center
  background-attachment scroll
  @extend .background-cover
  margin-bottom 50px
  .site-heading, .post-heading, .page-heading
    padding 100px 0 50px
    color white
    @media only screen and (min-width: 768px)
      padding 150px 0
    &.archives
      color brand-primary
      margin-top 60px
  .site-heading, .page-heading
    text-align center
    h1
      margin-top 0
      font-size 50px
    .subheading
      font-size 24px
      line-height 1.1
      display block
      @extend .sans-serif
      font-weight 300
      margin 10px 0 0
    @media only screen and (min-width: 768px)
      h1
        font-size 80px
  .post-heading
    h1
      font-size 35px
    .subheading, .meta
      line-height 1.1
      display block
    .subheading
      @extend .sans-serif
      font-size 24px
      margin 10px 0 30px
      font-weight 600
    .meta
      @extend .serif
      font-style italic
      font-weight 300
      font-size 20px
      a
        color white
    @media only screen and (min-width: 768px)
      h1
        font-size 55px
      .subheading
        font-size 30px

.post-preview
  > a
    color gray-dark
    &:hover, &:focus
      text-decoration none
      color brand-primary
    > .post-title
      font-size 25px
      margin-top 30px
      margin-bottom 10px
      &.archive
        font-size 22px
    > .post-subtitle
      margin 0
      font-weight 300
      margin-bottom 10px
      font-size 15px
      line-height 1.3
  > .post-meta
    font-family 'Lora', 'Times New Roman', serif
    color gray
    font-size 18px
    font-style italic
    margin-top 0
    &.archive
      font-size 16px
    > a
      text-decoration none
      color gray-dark
      &:hover, &:focus
        color brand-primary
        text-decoration underline
  @media only screen and (min-width: 768px)
    > a
      > .post-title
        font-size 30px
        line-height 26px
        margin-bottom 10px
      > .post-subtitle
        font-size 16px
    > .post-meta
      font-size: 18px;

.section-heading
  font-size 36px
  margin-top 60px
  font-weight 700

.caption
  text-align center
  font-size 14px
  padding 10px
  font-style italic
  margin 0
  display block
  border-bottom-right-radius 5px
  border-bottom-left-radius 5px

.post-tags, .post-categories
  font-size 15px
  margin-top 20px
  margin-bottom 20px
  a
    border-bottom 1px dotted #ABABAB
    text-transform uppercase
    margin-right 10px
    &:hover, &:visited, &:active
      text-decoration none
      border-bottom none

.archive-before-pagination
  height 30px
footer
  padding 10px 0 30px
  .list-inline
    margin 0
    padding 0
  .copyright
    font-size 14px
    text-align center
    margin-bottom 0

.floating-label-form-group
  font-size 14px
  position relative
  margin-bottom 0
  padding-bottom 0.5em
  border-bottom 1px solid gray-light
  input, textarea
    z-index 1
    position relative
    padding-right 0
    padding-left 0
    border none
    border-radius 0
    font-size 1.5em
    background none
    box-shadow none !important
    resize none
  label
    display block
    z-index 0
    position relative
    top 2em
    margin 0
    font-size 0.85em
    line-height 1.764705882em
    vertical-align middle
    vertical-align baseline
    opacity 0
    -webkit-transition top 0.3s ease,opacity 0.3s ease
    -moz-transition top 0.3s ease,opacity 0.3s ease
    -ms-transition top 0.3s ease,opacity 0.3s ease
    transition top 0.3s ease,opacity 0.3s ease
  &::not(:first-child)
    padding-left 14px
    border-left 1px solid gray-light

.floating-label-form-group-with-value
  label
    top 0
    opacity 1

.floating-label-form-group-with-focus
  label
    color brand-primary

form .row:first-child .floating-label-form-group
  border-top 1px solid gray-light

.btn
  @extend .sans-serif
  text-transform uppercase
  font-size 14px
  font-weight 800
  letter-spacing 1px
  border-radius 0
  padding 15px 25px

.btn-lg
  font-size 16px
  padding 25px 35px

.btn-default
  &:hover, &:focus
    background-color brand-primary
    border 1px solid brand-primary
    color white

.pager
  margin 20px 0 0
  li
    > a, > span
      @extend .sans-serif
      text-transform uppercase
      font-size 14px
      font-weight 800
      letter-spacing 1px
      padding 15px 25px
      background-color white
      border-radius 0
    > a:hover, > a:focus
      color white
      background-color brand-primary
      border 1px solid brand-primary
  .disabled
    > a, > a:hover, > a:focus, > span
      color gray
      background-color gray-dark
      cursor not-allowed

::-moz-selection
  color white
  text-shadow none
  background brand-primary

::selection
  color white
  text-shadow none
  background brand-primary

img::selection
  color white
  background transparent

img::-moz-selection
  color white
  background transparent

body
  webkit-tap-highlight-color brand-primary
