  line-height 1em
  font-size 0.9em
/*float right*/
.toc
  padding 0
  margin 0em
  line-height 1.8em
  li
    list-style-type none

.toc-child 
  margin-left 0em

.post_article_copyright {
  /*width: 85%;*/
  /*max-width: 45em;*/
  margin: 2.8em auto 0;
  padding: 0.5em 1.0em;
  border: 1px solid #d3d3d3;
  font-size: 0.93rem;
  line-height: 1.6em;
  word-break: break-all;
  background: rgba(255,255,255,0.4);
}
.post_article_copyright p{margin:0;}
.post_article_copyright span {
  display: inline-block;
  width: 5.2em;
  color: #b5b5b5;
  font-weight: bold;
}
.post_article_copyright .raw {
  margin-left: 1em;
  width: 5em;
}
.post_article_copyright a {
  color: #808080;
  border-bottom:0;
}
.post_article_copyright a:hover {
  color: #a3d2a3;
  text-decoration: underline;
}
.post_article_copyright:hover .fa-clipboard {
  color: #000;
}
.post_article_copyright .post-url:hover {
  font-weight: normal;
}
.post_article_copyright .copy-path {
  margin-left: 1em;
  width: 1em;
  +mobile(){display:none;}
}
.post_article_copyright .copy-path:hover {
  color: #808080;
  cursor: pointer;
}
